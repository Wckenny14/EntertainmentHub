 <div class="magic">
    <h1 class = "magic_title">Magic 8 Ball - Star Wars Edition</h1>

    <div class="container">
        <div class="row justify-content-around">
            <div class="col-6">
                <%= image_tag "yoda.gif", :class => "yoda" %>
            </div>
            <div class="col-6">
                <div>
                    <form action="/magic/answer"> 
                            <label class = "form-label">
                                <input class = "form-control", type="search" name="question" placeholder="Ask your question here" required autofocus>
                            </label>
                            <button class = "btn btn-light">Submit</button>
                    </form>
                </div>
            </div>
        <div>
    </div>
</div>
