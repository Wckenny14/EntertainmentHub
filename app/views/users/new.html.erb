<div class="adminbg">
    <h1>Sign up and leave reviews for the movies of your choice</h1>

    <%# create error message if information is missing or inaccurate password and pw confirmation don't match %>
    <% if @user.errors.any?%>
        <ol>
            <% @user.errors.full_messages.each do |msg|%>
                <li><%= msg %></li>
            <% end %>
        </ol>
    <% end%>
    <%# create form for users to sign-up %>
    <div class="form">
        <%= form_for @user do |f|  %>
            <%= f.label :name, :class => 'custom_label' %>
            <%= f.text_field :name, :class => 'form-control' %>

            <%# email field and label that will appear in the form %>
            <%= f.label :email, :class => 'custom_label' %>
            <%= f.email_field :email, :class => 'form-control' %>

            <%# password field and label that will appear on the form %>
            <%= f.label :password, :class => 'custom_label' %>
            <%= f.password_field :password, :class => 'form-control' %>

            <%# password confirmation field and label for the form which will be checked against the given password %>
            <%= f.label :password_confirmation, :class => 'custom_label' %>
            <%= f.password_field :password_confirmation, :class => 'form-control' %>

            <%# Button for users to submit their inputs and sign-up %>
            <%= f.submit 'Sign Up!', :class => 'btn btn-success' %>
        <% end %>
    </div>
</div>
