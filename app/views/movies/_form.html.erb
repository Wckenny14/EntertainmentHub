<%= form_for @movie do |f| %>
    <%= f.label :title, :class => 'form-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
    <%= f.label :age, :class => 'form-label' %>
    <%= f.text_field :age, :class => 'form-control' %>
    <%= f.label :director, :class => 'form-label' %>
    <%= f.text_field :director, :class => 'form-control' %>
    <%= f.label :year, 'Year of release', :class => 'form-label' %>
    <%= f.text_field :year, :placeholder => "YYYY", :class => 'form-control' %>
    <%= f.label :score, "iMDb Score", :class => 'form-label' %>
    <%= f.text_field :score, :placeholder => '5.0', :class => 'form-control' %>
    <%= f.label :location, "Where to watch", :class => 'form-label' %>
    <%= f.text_field :location, :placeholder => "Disney+", :class => 'form-control' %>
    <%= f.label :synopsis, :class => 'form-label' %>
    <%= f.text_field :synopsis, :class => 'form-control' %>
    <%= f.label :image, :class => 'form-label' %>
    <%= f.url_field :image, :required => true, :class => 'form-control' %>
    <%# this replaces the button to submit the form %>

    <%# <%= f.label :review_id %>
    <%# <%= f.select :review_id, Review.pluck(:title, :id), :include_blank => true %>

    <%= f.submit %>
<% end %>